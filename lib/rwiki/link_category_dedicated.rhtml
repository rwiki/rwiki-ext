<%= dedicated_header(pg) %>

<% link_pages = pg.link_pages %>

<div class="main">
<%= dedicated_navi(pg) %>
<div class="body">

<div class="description">
<% pg.descriptions.each do |desc| %>
<p><%=h desc %></p>
<% end %>
</div>

<h2>リンク先の更新状況</h2>
<%= dedicated_list_recent_link(pg, pg.link_pages.sort {|x, y| x.modified <=> y.modified}) %>

</div>
</div>

<div class="sidebar">
<h2>最近見られたリンク</h2>
<%= dedicated_list_link(pg, link_pages.sort {|x, y| y.modified <=> x.modified}[0...default_list_number]) %>

<h2>多く見られたリンク</h2>
<%= dedicated_list_link(pg, link_pages.sort{|x, y| y.count.to_i <=> x.count.to_i}[0...default_list_number]) %>

<h2>リンク一覧</h2>
<%= dedicated_list_link(pg, link_pages.sort {|x, y| x.title <=> y.title}) %>
</div>

<%= dedicated_footer(pg) %>
