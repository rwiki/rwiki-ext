<%= header(pg) %>
<%= navi(pg) %>
<%= link_navi(pg) %>

<div class="edit">
<h1><%=h pg.title %></h1>

<form action="<%= form_action %>" method="post">
<p>
<%= form_hidden(pg.name, 'submit') %>
<input type="hidden" name="rev" value="<%= pg.revision %>" />
<input type="hidden" name="src" value="<%=h pg.src %>" />
<span class="item-title">タイトル: </span><input type="text" size="30" name="title" <%=tabindex%> value="<%=h pg.title %>" accesskey="T" />
<br />
<span class="item-title">説明: </span><textarea name="description" cols="80" rows="10" <%=tabindex%> accesskey="D"><%=h pg.description %></textarea>
<input type="submit" name="commit" value="保存" <%=tabindex%> accesskey="S" />
</p>
</form>
</div>

<% unless pg.empty? %>
<hr />
<%= body(pg) %>
<% end %>

<%= footer(pg) %>
