<%= super(pg) %>
<%
	cmd = var('cmd')
	cmd = cmd.first if cmd.kind_of?(Array)
	if cmd == 'view' and not pg.empty?
%>
<div class="rss_topic">
<%
	topics = ::RWiki::RSS::Topic.topics
	number = ::RWiki::RSS::Topic.number
	characters = ::RWiki::RSS::Topic.characters
	::RWiki::RSS::Topic.each_topics do |uri, channel, items, name, time|
		if topics.has_key?(uri) and not items.empty?
%>
	<div class="rss_topic_item">
		<span class="rss_topic_title">
			<%= tta(channel, name) %>(<%=h modified(channel.dc_date)%>)
		</span>
<%		items[0...number].each do |item| %>
		<span class="rss_topic_content">[<%= ttia(item, characters) %>]</span>
<%		end %>
	</div>
<%
		end
	end
%>
</div>
<% end %>
